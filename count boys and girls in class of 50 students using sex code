#include <stdio.h>
int main() {
int i, code,boys = 0, girls = 0;

printf("Enter sex code for 50 students (1 = Boy, 2 = Girl):\n");

    for (i = 1; i <= 50; i++)
      {
        scanf("%d", &code);

        if (code == 1)
            {
            boys = boys + 1;
            }
        else if (code == 2)
            {
            girls = girls + 1;
            }
        else
          {
            printf("invalid code! Use 1 for Boy or 2 for Girl.\n");
            i--;
          }
       }
printf("total Boys  = %d\n", boys);
printf("total Girls = %d\n", girls);
return 0;
}
