#include <stdio.h>
int main() {
int i, num;
int largest, smallest;

printf("enter 100 numbers:\n");
largest = smallest = num;

    for (i = 1; i < 100; i++)
      {
        scanf("%d", &num);

        if (num > largest)
            largest = num;

        if (num < smallest)
            smallest = num;
      }

printf("largest number = %d\n", largest);
printf("smallest number = %d\n", smallest);

return 0;
}
