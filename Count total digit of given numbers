#include <stdio.h>
int main() {
int num, count = 0;

printf("enter a number: ");
scanf("%d", &num);

    if (num == 0)
     {
        count = 1;
     }
    else
      {
        while (num != 0)
         {
           num = num / 10;
           count = count + 1;
         }
      }

printf("total digits in given numbers = %d\n", count);
return 0;
}
